@import 'include'

input
  padding 5px
  font 16px Verdana  
fieldset
  float left
  clear left
  width 100%
  margin 60px 0 0 0;
  padding 10px
  border 1px solid colors-mediumbackground
  background colors-lightbackground
  ol
    list-style none
    padding 10px 10px 0 10px
    li
      float left
      clear left
      width 100%
      padding-bottom 10px
      em
        vertical-align top
        margin-right 1em
        float left
    li.submit
      float none
      width auto
      a.register
        margin-left 1em
        font bold 16px Helvetica, Sans-Serif
        vertical-align bottom
input.error,textarea
  float left
input.error,textarea.error
  border red 2px solid
label.error
  display none !important
legend
  margin-left 1em
  color colors-fonttitle
  font bold 20px Helvetica, Sans-Serif
label
  float left
  width 200px
  text-align left
  vertical-align center
  color colors-fonttitle
  font bold 16px Helvetica, Sans-Serif